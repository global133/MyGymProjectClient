@{
    var showSidebar = ViewData["ShowSidebar"] as bool? ?? false;
    var path = Context.Request.Path.Value?.ToLower();
    var hideFooter = path.Contains("/loginpage") || path.Contains("registration");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyGymProject.Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <div class="content-wrapper">
       <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/Index">
                <img src="/source/index.png" alt="Логотип" width="40" height="40" class="me-2">
                <span class="fw-bold fs-5">MyGym</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index"><i class="fas fa-home me-1"></i> Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Privacy"><i class="fas fa-user-shield me-1"></i> Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/LoginPage"><i class="fas fa-user me-1"></i> Личный кабинет</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
        
        <div class="container-fluid">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    @if (!hideFooter)
    {
        <footer class="footer bg-dark text-white py-3 mt-auto border-top">
            <div class="container position-relative">
                <div class="text-center">
                    <p class="mb-3">&copy; 2025 - <strong>MyGym</strong>. Все права защищены.</p>

                    <div class="d-flex justify-content-center gap-4">
                        <a asp-area="" asp-page="/Privacy" class="text-decoration-none text-white-50">Политика конфиденциальности</a>
                        <a href="#" class="text-decoration-none text-white-50">Условия использования</a>
                    </div>
                </div>

                <div class="position-absolute" style="right: 5%; bottom: 1rem;">
                    <a href="#" class="text-white fs-4 me-3"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white fs-4 me-3"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white fs-4"><i class="fab fa-telegram-plane"></i></a>
                </div>
            </div>
        </footer>
    }
   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>