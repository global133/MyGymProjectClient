@page
@model MyGymProject.Client.Pages.RegistrationModel
@{
    ViewData["Title"] = "Registration";
}

<div class="container col-4">
    <form method="post">
        <div class="text-center mb-3">
            <h1 class="display-4 justify-content-center">Регистрация</h1>
        </div>
        <div class="mb-3">
            <label for="InputName" class="form-label">Введите имя</label>
            <input type="text" class="form-control" id="InputName" placeholder="Имя">
        </div>
        <div class="mb-3">
            <label for="InputDB" class="form-label">Введите дату рождения</label>
            <input type="text" class="form-control" id="InputDB" placeholder="Имя">
        </div>
        <div class="mb-3">
            <label for="InputPhone" class="form-label">Введите номер телефона</label>
            <input type="tel" class="form-control" id="InputPhone" placeholder="Номер телефона">
        </div>
        <div class="mb-3">
            <label for="InputEmail" class="form-label">Введите email</label>
            <input type="email" class="form-control" id="InputEmail" placeholder="email">
        </div>
        <div class="mb-3">
            <label for="InputPol" class="form-label">Укажите пол</label>
            <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                <option selected>Выберите пол</option>
                <option value="1">Мужской</option>
                <option value="2">Женский</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="InputLogin" class="form-label">Введите логин</label>
            <input type="text" class="form-control" id="InputLogin" placeholder="Придумайте логин">
        </div>
        <div class="mb-3">
            <label for="InputPassword" class="form-label">Пароль</label>
            <input type="password" class="form-control" id="InputPassword" placeholder="Придумайте пароль">
            <div id="passwordHelpBlock" class="form-text">
                Ваш пароль должен быть длиной от 8 до 20 символов, содержать буквы и цифры и не должен содержать пробелов, специальных символов или эмодзи.
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-dark">Зарегистрироваться</button>
        </div>
    </form>
</div>
